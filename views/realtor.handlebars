<header class="startup text-center text-white d-flex">
    <div class="container my-auto">
        <div class="row">
            <div class="col-lg-12 my-auto">
                <p1 id="title">
                    Welcome {{name}}
                </p1>
                <!-- Find a rental address -->

                <h4>Mailing List</h4>
                <br>
                <div id="blog-area">
                    <table boarder=1 frame=void rules=rows style="width: 100%">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th></th>
                        </tr>
                        {{#each mailings}}
                        <tr>
                            <td>{{this.first_name}}</td>
                            <td>{{this.last_name}}</td>
                            <td>{{this.email}}</td>
                            <td style="background-color: #49b5de;border-color: #4c5764;border: 2px solid grey;padding: 10px;text-align: center;">
                                <a style="display: block;color: #ffffff;font-size: 12px;text-decoration: none;text-transform: uppercase;" href="mailto:{{this.email}}">
                                    Send Email
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </table>
                </div>

            </div>


        </div>
    </div>
    </div>

</header>
